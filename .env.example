# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to git!

# Anthropic API Key (REQUIRED)
# Get yours at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-your-api-key-here

# JWT Secret for authentication (REQUIRED)
# Generate a random string - use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-to-random-string

# Database (automatically configured in Docker)
DATABASE_URL=postgresql://aibooks_user:aibooks_password_change_in_production@localhost:5432/aibooks

# Redis (automatically configured in Docker)
REDIS_URL=redis://localhost:6379

# Application Settings
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:3001

# Storage Settings
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# Optional: AWS S3 (if you want cloud storage instead of local)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# AWS_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Model Settings
DEFAULT_MODEL=claude-sonnet-4-20250514
MAX_TOKENS_BRIEF=4000
MAX_TOKENS_CHAPTER=16000
MAX_TOKENS_CONTINUITY=8000

# Queue Settings
QUEUE_CONCURRENCY_BRIEF=5
QUEUE_CONCURRENCY_CHAPTER=2
QUEUE_CONCURRENCY_CONTINUITY=3
